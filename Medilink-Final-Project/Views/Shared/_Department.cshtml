@model DepartmentPaginationViewModel
@{
    ViewData["Title"] = "_Banner";
}

<!-- Departments section start -->
<section id="departments">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="content wow fadeInDown" data-wow-duration="3s">
                    <h4>Dedicated Services</h4>
                    <h2>Our Departments</h2>
                </div>
            </div>
        </div>
        <div class="department-icon">
            <div class="menu-list">
                <div class="row">
                    @foreach (var item in Model.PagingList)
                    {
                        if (Model.PagingList.Count == 2)
                        {
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <div class="department-box wow fadeInUp" data-wow-duration="3s">
                            <div class="item-img">
                                <img src="~/uploads/@item.Photo" alt="">
                                <div class="item-btn">
                                    <a asp-controller="DepartmentDetail" asp-action="Index" asp-route-id="@item.Id">Detail<i class="fas fa-angle-right"></i></a>
                                </div>
                            </div>
                            <div class="item-content">
                                <h3><a asp-controller="DepartmentDetail" asp-action="Index" asp-route-id="@item.Id">@item.Name</a></h3>
                                <ul class="department-info">
                                    <li>
                                        <i class="flaticon-doctor"></i>
                                        <span>4</span>
                                        Specialist Docotrs
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                        }
                        else
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
                                <div class="department-box wow fadeInUp" data-wow-duration="3s">
                                    <div class="item-img">
                                        <img src="~/uploads/@item.Photo" alt="">
                                        <div class="item-btn">
                                            <a asp-controller="DepartmentDetail" asp-action="Index" asp-route-id="@item.Id">Detail<i class="fas fa-angle-right"></i></a>
                                        </div>
                                    </div>
                                    <div class="item-content">
                                        <h3><a asp-controller="DepartmentDetail" asp-action="Index" asp-route-id="@item.Id">@item.Name</a></h3>
                                        <ul class="department-info">
                                            <li>
                                                <i class="flaticon-doctor"></i>
                                                <span>4</span>
                                                Specialist Docotrs
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="pagination-area">
                    <ul class="pagination justify-content-center">
                        @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model.PagingList })
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Departments section end -->
