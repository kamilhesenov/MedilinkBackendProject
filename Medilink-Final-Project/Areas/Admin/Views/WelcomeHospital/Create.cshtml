@model Medilink_Final_Project.Models.Home.WelcomeHospital
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center">
    <h1>Create</h1>
</div>

<hr />
<div class="row ml-5">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Heading" class="control-label"></label>
                <input asp-for="Heading" class="form-control" />
                <span asp-validation-for="Heading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label class="custom-file-label" asp-for="Upload"></label>
                    <input type="file" class="custom-file-input" asp-for="Upload" />
                    <span asp-validation-for="Upload" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <img class="image-preview img-fluid" />
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label class="custom-file-label" asp-for="SecondUpload"></label>
                    <input type="file" class="custom-file-input" asp-for="SecondUpload" />
                    <span asp-validation-for="SecondUpload" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <img class="second-image-preview img-fluid" />
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary ml-3" asp-action="Index">Return to Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#Upload").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    $(".image-preview").attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });

            $("#SecondUpload").change(function () {
                var file = this.files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (e) {
                    $(".second-image-preview").attr("src", e.target.result);
                };
                fileReader.readAsDataURL(file, "UTF-8");
            });
        })
    </script>
}

