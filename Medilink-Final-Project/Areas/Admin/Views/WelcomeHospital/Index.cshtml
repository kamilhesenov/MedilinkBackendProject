@model IEnumerable<Medilink_Final_Project.Models.Home.WelcomeHospital>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<p class="d-flex justify-content-center align-items-center">
    <a class="btn btn-outline-success w-25" asp-action="Create"><i class="fas fa-plus"></i></a>
</p>
<table class="table table-striped ml-1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Heading)
            </td>
            <td>
                <img src="~/uploads/@item.Photo" width="150" height="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <img src="~/uploads/@item.SecondPhoto" width="250" height="150" />
            </td>
            <td>
                <a class="btn btn-outline-warning w-75" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                <a class="btn btn-outline-info mt-1 w-75" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                <a class="btn btn-outline-danger mt-1 w-75" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

